@model IEnumerable<DsiVendas.Models.Venda>

<h1>Lista de Vendas</h1>

<p>
  <a asp-action="Criar">Criar Nova Venda</a>
</p>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Cliente</th>
      <th scope="col">Data da venda</th>
      <th scope="col">Forma de Pagamento</th>
      <th scope="col">Total</th>
      <th scope="col">Itens da Venda</th>
      <th scope="col">Ações</th>

    </tr>
  </thead>
  <tbody>
    @foreach (var venda in Model)
    {
      <tr>
        <td scope="row">@venda.Id</td>
        <td>@venda.Cliente.Nome</td>
        <td>@venda.DataVenda.ToShortDateString()</td>
        <td>@venda.FormaPagamento</td>
        <td>R$@venda.Total.ToString("F2")</td>
        <td>
          @foreach (var item in venda.ItensVenda)
          { 
            @item.Produto?.Nome
            <br/>
          }
        </td>
        <td>
          <a asp-action="Editar" asp-route-id="@venda.Id">Editar</a> |
          <a asp-action="Detalhes" asp-route-id="@venda.Id">Detalhes</a> |
          <a asp-action="Remover" asp-route-id="@venda.Id">Excluir</a>
        </td>
      </tr>
    }
  </tbody>
</table>